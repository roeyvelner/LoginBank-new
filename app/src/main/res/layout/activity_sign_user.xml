<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="arieluniversity.loginbank.SignUser"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp"
    android:layoutDirection="rtl"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >


        <TextView
            android:id="@+id/hello_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="start"
            android:textColor="@android:color/holo_green_dark"
            android:text="פתיחת חשבון"
            android:textSize="30sp"
            />
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"

                android:text=""
                android:textSize="30sp"
                android:visibility="invisible"
                />
            <Button
                android:id="@+id/Back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"

                android:text="חזרה לתפריט ראשי"
                android:onClick="BackBtnClick"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/email_tag"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="   Email" />

            <EditText
                android:id="@+id/email_real"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="נא הכנס כתובת מייל"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/first_name_tag"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="שם פרטי   "
                android:textDirection="rtl"
                />

            <EditText
                android:id="@+id/first_name_real"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textDirection="rtl"
                android:hint="נא הכנס שם פרטי"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/last_name_tag"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="שם משפחה   "
                android:textDirection="rtl"
                />

            <EditText
                android:id="@+id/last_name_real"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textDirection="rtl"
                android:hint="נא הכנס שם משפחה"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/Pass_tag"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="סיסמא   "
                android:textDirection="rtl"
                />

            <EditText
                android:id="@+id/Pass_real"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textDirection="rtl"
                android:inputType="textPassword"
                android:hint="נא הכנס סיסמא"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/adress_tag"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="כתובת   " />

            <EditText
                android:id="@+id/adress_real"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="נא הכנס שם רחוב"
                android:textSize="12sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/city_tag"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="עיר   " />

            <EditText
                android:id="@+id/city_real"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:hint="נא הכנס שם עיר"
                android:textSize="12sp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/verificationQ_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:text="שאלת הזדהות   "
                    android:textSize="13sp"
                    android:gravity="top"
                    />
                <EditText
                    android:id="@+id/verificationQ_tagHint"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"

                    android:gravity="bottom"
                    android:hint="נא הכנס שאלת הזדהות"
                    android:textSize="9dp"/>
            </LinearLayout>


            <EditText
                android:id="@+id/verificationQ_real"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:inputType="textPassword"
                android:hint="נא הכנס תשובת הזדהות"
                android:textSize="12sp"
                android:text="" />

        </LinearLayout>

        <Button
            android:id="@+id/editDetails_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="שמור פרטים וסיום הרשמה"
            android:onClick="SaveDetailsClick"
            />



    </LinearLayout>

</android.support.v7.widget.LinearLayoutCompat>

</ScrollView>
