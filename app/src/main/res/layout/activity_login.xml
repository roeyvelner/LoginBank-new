<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="arieluniversity.loginbank.Login"
tools:layout_editor_absoluteY="0dp"
tools:layout_editor_absoluteX="0dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="right"
        android:hint="User Name" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Password"
        android:gravity="right"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LogIn"
        android:onClick="LoginClick"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="5dp"
            android:text="שכחת סיסמא?"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp"
            android:onClick="ForgotPasswordClick"
            />
        <TextView
            android:id="@+id/new_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:padding="5dp"
            android:text="משתמש חדש?"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="14sp"
            android:onClick="NewUserClick"
            />

    </LinearLayout>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_weight="1"

        />


    <Button
        android:id="@+id/about_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="getToaboutClick"
        android:text="אודות" />
    <Button
        android:id="@+id/getToMap_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="getToMapClick"
        android:text="עבור למפה" />
</LinearLayout>



</android.support.v7.widget.LinearLayoutCompat>


