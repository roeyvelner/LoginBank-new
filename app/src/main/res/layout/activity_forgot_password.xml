<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="arieluniversity.loginbank.forgotPassword"
    tools:layout_editor_absoluteY="0dp"
    tools:layout_editor_absoluteX="0dp"
    android:layoutDirection="rtl"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/hello_user"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:textColor="@android:color/holo_green_dark"
            android:text="שחזור סיסמא"
            android:textSize="30sp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/user_name_tag"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="אנא הכנס שם משתמש   "
                android:textDirection="rtl"
                />

            <EditText
                android:id="@+id/user_name_real"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:textDirection="rtl"
                android:hint=""
                android:textSize="15sp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/forgot_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="אישור"
            android:onClick="forgotBtnClick"
            />
        <TextView
            android:id="@+id/ValQ"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text=""
            android:textSize="25dp"
            android:textDirection="rtl"
            />
        <EditText
            android:id="@+id/ValAns"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textDirection="rtl"
            android:hint="כאן הכנס את התשובה"
            android:textSize="20sp"
            android:visibility="invisible"
            />
        <Button
            android:id="@+id/Verification_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="אישור"
            android:onClick="VerificationBtnClick"
            />
        <TextView
            android:id="@+id/thePass"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text=""
            android:textSize="25dp"
            android:textDirection="rtl"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:text=""
            android:visibility="invisible"
            android:textDirection="rtl"
            />
        <Button
            android:id="@+id/Back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="חזרה לתפריט ראשי"
            android:onClick="BackBtnClick"
            />
    </LinearLayout>
</android.support.v7.widget.LinearLayoutCompat>
